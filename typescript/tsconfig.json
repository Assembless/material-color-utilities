{
  "compilerOptions": {
      "target": "es2018",
      "module": "esnext",
      "moduleResolution": "node",
      "lib": [
          "es2018",
          "dom",
          "dom.iterable"
      ],
      "declaration": true,
      "sourceMap": true,
      "inlineSources": true,
      "experimentalDecorators": true,
      "esModuleInterop": false,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": false,
      "outDir": "./dist",
      "composite": true,
      "importHelpers": true,
      "rootDir": "src"
  },
  "include": [
      "./src/**/*.ts"
  ]
}